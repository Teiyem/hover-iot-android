<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hover" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorSecondary</item>
        <item name="colorOnPrimary">?attr/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryLight</item>
        <item name="colorOnSecondary">@color/colorSecondaryDark</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="android:statusBarColor">?attr/colorOnSecondary</item>
        <item name="android:navigationBarColor">@color/colorSecondaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Hover.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    <style name="Theme.Hover.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="Theme.Hover.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorSecondaryDark</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/hover_black</item>
        <item name="windowSplashScreenAnimationDuration">400</item>
        <item name="postSplashScreenTheme">@style/Theme.Hover</item>
    </style>

    <style name="WindowAnimationStyle">
        <item name="android:windowEnterAnimation">@android:anim/linear_interpolator</item>
    </style>

    <style name="Theme.Hover.Dialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowBackground">@drawable/bg_popup</item>
        <item name="android:windowAnimationStyle">@style/Theme.Hover.Dialog.Animations</item>
    </style>

    <style name="Theme.Hover.Dialog.Animations">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="Theme.Hover.Button">
        <item name="cornerRadius">30dp</item>
    </style>

    <style name="Theme.Hover.TextView.Title" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Theme.Hover.Button.Rounded">
        <item name="cornerRadius">30dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">6dp</item>
        <item name="android:insetBottom">6dp</item>
        <item name="enforceTextAppearance">true</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="elevation">10dp</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:backgroundTint">@color/color_button</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="Theme.Hover.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Hover.Style.TextInput"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="boxStrokeColor">@color/colorSecondary</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>

    <style name="Theme.Hover.Style.TextInputDropdown"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="boxStrokeColor">@color/colorSecondary</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>
</resources>